pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/deepakchilukuri/Book-My-Show.git']]
                )
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh '''
                        $SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectName=BMS \
                        -Dsonar.projectKey=BMS
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    waitForQualityGate abortPipeline: true, credentialsId: 'Sonar-token'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    cd bookmyshow-app
                    if [ -f package.json ]; then
                        rm -rf node_modules package-lock.json
                        npm install
                    else
                        echo "Error: package.json not found!"
                        exit 1
                    fi
                '''
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs . > trivyfs.txt || true'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh '''
                            echo "üî® Building Docker image..."
                            docker build --no-cache -t chilukuri268/book-myshow:latest -f bookmyshow-app/Dockerfile bookmyshow-app

                            echo "üì¶ Pushing image to Docker Hub..."
                            docker push chilukuri268/book-myshow:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes (EKS)') {
            steps {
                withAWS(credentials: 'aws-cred', region: 'ap-south-1') {
                    sh '''
                        echo "‚öôÔ∏è Configuring kubeconfig for EKS..."
                        aws eks --region ap-south-1 update-kubeconfig --name deepakcluster

                        echo "üöÄ Applying Kubernetes manifests..."
                        kubectl apply -f deployment.yml
                        kubectl apply -f service.yml

                        echo "‚úÖ Deployment applied successfully. Checking rollout..."
                        kubectl rollout status deployment/bookmyshow-deployment

                        echo "‚è≥ Waiting for LoadBalancer external IP..."
                        for i in {1..20}; do
                            LB=$(kubectl get svc bookmyshow-service -o jsonpath='{.status.loadBalancer.ingress[0].hostname}')
                            if [ -n "$LB" ]; then
                                echo "üåê LoadBalancer ready: http://$LB"
                                break
                            else
                                echo "Still waiting... ($i/20)"
                                sleep 15
                            fi
                        done
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed! Check logs.'
        }
    }
}
